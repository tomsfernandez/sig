@model Web.Controllers.ToStoreViewModel

@{
    ViewBag.Title = "Confirmación de Ubicación";
    Layout = "_Layout";
}

<h2>Confirmación de Ubicación</h2>

<form asp-action="StorageConfirmation">
    <div class="form-group">
        <label asp-for="PalletId" class="control-label"></label>
        <p>Código de Pallet: @(Model.PalletId)</p>
        <input type="hidden" asp-for="PalletId" value="@(Model.PalletId)" class="form-control"/>
    </div>
    <div class="form-group">
        <p>Ubicación: @(Model.WarehouseLocation.ToString())</p>
        <p>Código de Ubicación: @(Model.WarehouseLocation.Id)</p>
        <input type="hidden" name="LocationId" value="@(Model.WarehouseLocation.Id)" class="form-control"/>
    </div>
    <div class="form-group">
        <input asp-for="ConfirmedLocationId" class="form-control"/>
        <span asp-validation-for="ConfirmedLocationId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="StorageConfirmation" class="btn btn-primary"/>
    </div>
</form>