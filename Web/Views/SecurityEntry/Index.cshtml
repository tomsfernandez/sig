@model IEnumerable<Web.Models.Domain.Entry>

@{
    ViewData["Title"] = "Index";
}

<h1>Control de seguridad</h1>

<table class="table">
    <thead>
    <tr>
        <th>
            Fecha de entrada
        </th>
        <th>
            Número de remito
        </th>
        <th>
            DNI de conductor
        </th>
        <th>
            Patente del vehículo
        </th>
        <th>
            Patente del trailer
        </th>
        <th>Acciones</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.EntryDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Remittance.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Driver.Dni)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Vehicle.LicensePlate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Trailer.LicensePlate)
            </td>
            <td>
                <a asp-action="Detail" asp-route-id="@item.Id">Ver detalle</a>
            </td>
            @*<td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                Fecha de entrada, codigo remito, patente, dni del conductor -> Autorizar
            </td>*@
        </tr>
    }
    </tbody>
</table>