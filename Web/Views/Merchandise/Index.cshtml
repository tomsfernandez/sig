@model IEnumerable<Web.Models.Domain.Merchandise>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ExternCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TotalBoxes)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BoxHeight)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BoxWidth)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BoxLength)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BoxWeight)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Remittance)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ExternCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalBoxes)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BoxHeight)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BoxWidth)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BoxLength)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BoxWeight)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Remittance.Id)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
